{
	"useTabs": true,
	"tabWidth": 4,
	"singleQuote": true,
	"overrides": [
		{
			"files": "*.md",
			"options": {
				"parser": "markdown",
				"useTabs": false,
				"tabWidth": 4,
				"lineWidth": 40
			}
		},
		{
			"files": ".xml",
			"options": {
				"parser": "html",
				"useTabs": false,
				"tabWidth": 2
			}
		},
		{
			"files": ".xsl",
			"options": {
				"parser": "html",
				"useTabs": false,
				"tabWidth": 2
			}
		},
		{
			"files": ".xslt",
			"options": {
				"parser": "html",
				"useTabs": false,
				"tabWidth": 2
			}
		},
		{
			"files": ".html",
			"options": {
				"parser": "html",
				"lineWidth": 50
			}
		}
	]
}
